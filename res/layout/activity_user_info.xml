<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    
    android:background="@color/menu_bg">

    <include layout="@layout/view_def_head" />

    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:background="@color/bg">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
           
            
            <RelativeLayout 
                android:orientation="horizontal" 
                android:id="@+id/photoLayout" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:background="@drawable/shape_border_top"
                android:layout_margin="10dp">
                <TextView 
                    style="@style/view_style"
                    android:textSize="18sp" 
                    android:textColor="@color/black" 
                    android:focusable="false" 
                    android:layout_marginLeft="5.0dip" 
                    android:text="头像" 
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
               
                <ImageView
                    android:id="@+id/ivPhoto" 
                    android:layout_width="65.0dip" 
                    android:layout_height="65.0dip" 
                    android:layout_marginTop="20.0dip" 
                    android:layout_marginRight="20.0dip" 
                    android:layout_marginBottom="20.0dip" 
                    android:src="@drawable/photo" 
                    android:scaleType="centerCrop"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivPhoto"
                    android:layout_alignRight="@+id/ivPhoto"
                    android:paddingBottom="5.0dip"
                    android:src="@drawable/camera" />

            </RelativeLayout>
           
            <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_border_top"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/name_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp"
                         >
   
                        <TextView
                           
                            
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            
                            android:gravity="center"
                            android:text="用户姓名"
                            style="@style/tv_other"
                            android:textColor="@color/gray"/>

                        <TextView 
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text=""                      
                            android:layout_centerVertical="true"/>   
                    </RelativeLayout>
                    <View
       						 android:layout_width="fill_parent"
       						 android:layout_height="0.5dip" 
       						 android:background="@color/gray" />
                     <RelativeLayout
                        android:id="@+id/phone_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp"
                         >
   
                        <TextView
                           
                            
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            
                            android:gravity="center"
                            android:text="手机号码"
                            style="@style/tv_other"
                            android:textColor="@color/gray"/>

                        <TextView 
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/arrow_right"                     
                            android:layout_centerVertical="true"/>   
                    </RelativeLayout>
                     <View
       						 android:layout_width="fill_parent"
       						 android:layout_height="0.5dip" 
       						 android:background="@color/gray" />
                      <RelativeLayout
                        android:id="@+id/address_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp"
                         >
   
                        <TextView
                           
                            
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            
                            android:gravity="center"
                            android:text="邮寄地址"
                            style="@style/tv_other"
                            android:textColor="@color/gray"/>

                        <TextView 
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/arrow_right"                     
                            android:layout_centerVertical="true"/>   
                    </RelativeLayout>
                </LinearLayout>
                
             <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_border_top"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/layout_pwd"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp"
                         >

                       

                        <TextView
                           
                            android:id="@+id/gongneng_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            
                            android:gravity="center"
                            android:text="修改密码"
                            style="@style/tv_other"
                            android:textColor="@color/gray"/>

                        <TextView 
                            
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/arrow_right"                         
                             android:layout_centerVertical="true"/>   
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_border_top"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/btn_exit_info"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:layout_margin="10dp" 
                        android:onClick="loginexit"
                         >

                       

                        <TextView
                           
                            
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            
                            android:gravity="center"
                            android:text="退        出"
                            style="@style/tv_other"
                            android:textColor="@color/gray"/>

                        <TextView 
                            
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/arrow_right"                         
                             android:layout_centerVertical="true"/>   
                    </RelativeLayout>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>